<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/colorLightBlue">

      <TextView
          android:id="@+id/iitem_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/item_content_left_spacing"
          android:layout_marginTop="8dp"
          android:textColor="@android:color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="01/01/2018"/>

      <TextView
          android:id="@+id/iitem_firstName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/item_content_left_spacing"
          android:layout_marginTop="40dp"
          android:textColor="@android:color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="FirstName"/>

      <TextView
          android:id="@+id/iitem_lastName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:textColor="@android:color/black"
          app:layout_constraintBottom_toBottomOf="@+id/iitem_firstName"
          app:layout_constraintStart_toEndOf="@+id/iitem_firstName"
          tools:text="LastName"/>

      <TextView
          android:id="@+id/iitem_department"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/item_content_left_spacing"
          android:layout_marginTop="35dp"
          android:textColor="@android:color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@id/iitem_lastName"
          tools:text="Department"/>

      <TextView
          android:id="@+id/iitem_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="20dp"
          app:layout_constraintBottom_toBottomOf="@+id/iitem_date"
          app:layout_constraintEnd_toEndOf="parent"
          tools:text="Status"/>

    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>